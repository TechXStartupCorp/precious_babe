<style>
    .testimonials-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 2rem;
      margin-top: 2rem;
    }
  
    .testimonial {
      background: #f9f9f9;
      border-radius: 12px;
      padding: 1.5rem;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
      text-align: center;
    }
  
    .testimonial-avatar {
      border-radius: 50%;
      margin-bottom: 1rem;
    }
  </style>


<section class="custom-testimonials page-width">
    <h2 class="title inline-richtext h2">
        {{ section.settings.heading }}
      </h2>
    <div class="testimonials-grid">
      {% for block in section.blocks %}
        <div class="testimonial" id="block-{{ block.id }}">
          <img
            src="https://ui-avatars.com/api/?name={{ block.settings.title | url_encode }}&size=300&background=0D8ABC&color=fff&rounded=true"
            alt="{{ block.settings.title }}"
            width="150"
            height="150"
            class="testimonial-avatar"
          >
          <h3>{{ block.settings.title }}</h3>
          <p>{{ block.settings.text }}</p>
        </div>
      {% endfor %}
    </div>
  </section>
  

{% schema %}
{
  "name": "Custom Testimonials",
  "tag": "section",
  "class": "section",
  "settings": [
    {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Name / Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Testimonial"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Custom Testimonials",
      "category": "Testimonials",
      "blocks": [
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        }
      ]
    }
  ]
}
{% endschema %}
