<style>
  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .custom-testimonials {
    margin-bottom: 3rem;
}

  .testimonial {
    display: flex;
    flex-direction: column;
    background: #f9f9f9;
    border-radius: 12px;
    padding: 2rem;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
    text-align: center;
  }

  .testimonial-avatar {
    border-radius: 50%;
    margin-bottom: 1rem;
  }

  .reviewer-info-container {
    gap: 1.25rem;
  }

  .text-container {
    align-items: start;
  }

  .text-container h3,
  p {
    margin: 0 !important;
  }

  .text-container h3 {
    font-size: 1.75rem !important;
    font-weight: bold !important;
  }

  .text-container p {
    color: var(--color-grey-text);
    font-size: 1.5rem;
  }

  .testimonial-text {
    text-align: left;
  }
</style>

<div class="custom-testimonials page-width">
  <h2 class="title inline-richtext h2">
    {{ section.settings.heading }}
  </h2>
  <div class="testimonials-grid">
    {% for block in section.blocks %}
      <div class="testimonial" id="block-{{ block.id }}">
        <div class="reviewer-info-container flex">
          <div>
            {% if block.settings.image %}
              <img
                src="{{ block.settings.image | img_url: '100x100' }}"
                alt="{{ block.settings.title }}"
                width="50"
                height="50"
                class="testimonial-avatar"
              >
            {% else %}
              <div class="testimonial-avatar-placeholder">
                {{ block.settings.title | slice: 0, 1 | upcase }}
              </div>
            {% endif %}
          </div>
          <div class="flex flex-column text-container">
            <h3>{{ block.settings.title }}</h3>
            <p>{{ block.settings.date }}</p>
          </div>
        </div>
        <p class="testimonial-text">"{{ block.settings.text }}"</p>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Custom Testimonials",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Name / Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Testimonial"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "date",
          "label": "Date"
        },
        {
          "type": "range",
          "id": "rating",
          "label": "Star Rating",
          "min": 1,
          "max": 5,
          "step": 1,
          "default": 5
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Custom Testimonials",
      "category": "Testimonials",
      "blocks": [
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        }
      ]
    }
  ]
}
{% endschema %}


