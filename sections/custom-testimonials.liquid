<div style="padding: 2rem; background: #f3f3f3; text-align: center;">
    <h2>Custom Section</h2>
    <p>This is a custom section.</p>
    <span>{{ section.settings.span_text }}</span>
  
    <div class="testimonials">
      {% for block in section.blocks %}
        {% if block.type == 'testimonial' %}
          <div class="testimonial" style="margin-top: 2rem;">
            {% if block.settings.image %}
                <img 
                    src="{{ block.settings.image | img_url: '60x60' }}" 
                    alt="{{ block.settings.name | escape }}" 
                    width="60" 
                    height="60" 
                    style="border-radius: 50%; object-fit: cover;" 
                  />
            {% endif %}
            <p><strong>{{ block.settings.name }}</strong> â€” {{ block.settings.date }}</p>
            <p>{{ block.settings.text }}</p>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
  
  {% schema %}
{
  "name": "Custom Section",
  "settings": [
    {
      "type": "text",
      "id": "span_text",
      "label": "Span Text",
      "default": "this is a span"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "text",
          "id": "name",
          "label": "Name"
        },
        {
          "type": "text",
          "id": "date",
          "label": "Date"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Testimonial Text"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Photo"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Custom Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}
  
  