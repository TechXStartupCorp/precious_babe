<style>
  .shopper-info-bar {
    margin-top: 5rem;
    padding-bottom: 7rem;
  }
  .info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1.5rem;
    padding-block: 2rem;
  }

  .info-block {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
  }

  .info-link {
    display: flex;
    align-items: flex-start;
    gap: 1.75rem;
    text-decoration: none;
    color: inherit;
  }

  .cursor-pointer {
    cursor: pointer;
  }

  .icon svg {
    width: 50px;
    height: 50px;
    flex-shrink: 0;
    stroke: currentColor;
    margin-top: 3px;
  }

  .text .main-text {
    font-weight: 600;
    font-size: 1.9rem;
  }

  .text .sub-text {
    font-size: 1.6rem;
    color: #8e8d8d;
    margin-top: -3px;
  }
</style>

<div class="shopper-info-bar page-width">
  <div class="info-grid">
    {% for block in section.blocks %}
      {% assign icon = block.settings.icon_svg %}
      {% assign main_text = block.settings.main_text %}
      {% assign subtext = block.settings.subtext %}
      {% assign link = block.settings.link %}

      <div class="info-block">
        {% if link != blank %}
          <a href="{{ link }}" class="info-link cursor-pointer">
        {% endif %}

        <div class="icon" aria-hidden="true">
          {{ icon }}
        </div>

        <div class="text">
          <div class="main-text">{{ main_text }}</div>
          {% if subtext != blank %}
            <div class="sub-text">{{ subtext }}</div>
          {% endif %}
        </div>

        {% if link != blank %}
          </a>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Shopper Info Bar",
  "max_blocks": 3,
  "blocks": [
    {
      "type": "info",
      "name": "Info Item",
      "settings": [
        {
          "type": "textarea",
          "id": "icon_svg",
          "label": "SVG Icon (paste SVG code here)",
          "default": "<svg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke='currentColor'><path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M3 10h11M9 21h3M12 4v16' /></svg>"
        },
        {
          "type": "text",
          "id": "main_text",
          "label": "Main Text",
          "default": "Free shipping across Canada"
        },
        {
          "type": "text",
          "id": "subtext",
          "label": "Subtext",
          "default": "Optional subtext here"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Optional Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Shopper Info Bar",
      "blocks": [{ "type": "info" }, { "type": "info" }, { "type": "info" }]
    }
  ]
}
{% endschema %}
