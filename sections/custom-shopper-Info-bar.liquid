<div class="shopper-info-bar page-width">
  <div class="info-grid">
    {% for block in section.blocks %}
      <div class="info-block">
        <div class="icon">
          {{ block.settings.icon_svg }}
        </div>
        <p>{{ block.settings.text }}</p>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Shopper Info Bar",
  "max_blocks": 3,
  "blocks": [
    {
      "type": "info",
      "name": "Info Item",
      "settings": [
        {
          "type": "text",
          "id": "main_text",
          "label": "Main Text",
          "default": "Free shipping across Canada"
        },
        {
          "type": "text",
          "id": "subtext",
          "label": "Subtext",
          "default": ""
        },
        {
          "type": "url",
          "id": "link",
          "label": "Optional Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Shopper Info Bar",
      "blocks": [
        { "type": "info" },
        { "type": "info" },
        { "type": "info" }
      ]
    }
  ]
}
{% endschema %}


